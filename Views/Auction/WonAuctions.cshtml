@model IEnumerable<RealtimeTestApp.Models.Auction>
@{
    ViewBag.Title = "WonAuctions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Won Auctions</h2>

<div class="row">
    @foreach (var auction in Model)
    {
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    @Html.ActionLink(auction.ProductName, "Auction", "Auction", new { id = auction.Id }, new { @class = "cool" })
                </div>
                <div class="panel-body text-center">
                    <img src=@auction.Image class="img-rounded img-responsive" />
                    <p class="price"> $ @auction.StartingPrice</p>
                </div>
            </div>
        </div>
    }
</div>

