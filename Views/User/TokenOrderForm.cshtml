@using Microsoft.AspNet.Identity
@model RealtimeTestApp.Models.OrderListViewModel
@{
    ViewBag.Title = "TokenOrderForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>TokenOrderForm</h2>
<div class="row">
    @using (Html.BeginForm("TokenOrder", "User"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Order.TokenAmount)
            @Html.EnumDropDownListFor(m => m.Order.TokenAmount, "Select Amount Package", new { @class = "form-control" })
        </div>

            <button class="btn btn-primary" type="submit"> Submit </button>
    }

    <a id="c-mobile-payment-widget" style="padding: 25px 0 25px 0;" href=@("http://stage.centili.com/widget/WidgetModule?api=681ca1fa4eee1227adf277e272dd7b44&clientId=" + User.Identity.GetUserId())>
        <img src="https://www.centili.com/images/centili-widget-button.png" />
    </a>

</div>


<div class="row-fluid">
    @foreach (var order in Model.Orders)
    {
        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-heading">@order.Id</div>
                <div class="panel-body">
                    <p>@order.CreationDateTime</p>
                    <p>@order.PackagePrice</p>
                    <p>@order.TokenAmount</p>
                    <p>@order.State.ToString()</p>
                </div>
                <div class="panel-footer text-left">
                    @Html.ActionLink("Details", "OrderDetails", "User", order, new { @class = "btn btn-primary" });
                </div>
            </div>
        </div>
    }
</div>


<script type="text/javascript" src="http://stage.centili.com/widget/js/c-mobile-payment-scripts.js"></script>



